<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:background="@drawable/bg1"
    android:layout_height="fill_parent"
    >


    <TableRow
        android:layout_width="309dp"
        android:layout_height="228dp"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:paddingTop="10px">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="123dp"
            android:layout_height="238dp"
            app:srcCompat="@drawable/iwik" />
    </TableRow>

    <TableRow
        android:layout_marginTop="20dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="Nama   :"
            android:textColor="#000000"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/screenName"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:text="RAUHUL PRATIWI ANWARI"
            android:textSize="20sp">

        </TextView>

    </TableRow>


    <TableRow
        android:layout_marginTop="20dip" >

        <TextView android:text="NIM      :"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"></TextView>

        <TextView
            android:id="@+id/NIM"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:text="180201033"
            android:textSize="20sp">

        </TextView>

    </TableRow>
    <TableRow
        android:layout_marginTop="20dip" >

        <TextView android:text="Prodi    :"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"></TextView>

        <TextView
            android:id="@+id/prodi"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:text="SISTEM INFORMASI"
            android:textSize="20sp">

        </TextView>

    </TableRow>
    <TableRow
        android:layout_marginTop="20dip" >

        <TextView android:text="Alamat :"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"></TextView>

        <TextView
            android:id="@+id/alamat"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:text="PANCOR "
            android:textSize="20sp">

        </TextView>

    </TableRow>


    <TableRow
        android:gravity="center"
        android:layout_marginTop="20dip" >

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:clickable="true"
            android:text="Klik"></Button>
    </TableRow>

</TableLayout>